    "typescript": "^1.8.9",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.8.4",
    "ws": "^1.0.1"
  }
